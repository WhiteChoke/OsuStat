<Window x:Class="OsuStat.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OsuStat.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="850 " Width="572" 
        Background="{StaticResource BackgroundBlack}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="{StaticResource RaspberryRed}">
            <Button Content="Setting" Background="Transparent" BorderBrush="Transparent" 
                    Command="{Binding NavigateToSettingsCommand}"/>
        </StackPanel>
        <ContentControl Grid.Row="1" 
                        Content="{Binding Navigation.CurrentView}"/>
    </Grid>
</Window>
